generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id             String          @id @default(uuid())
  authProviderId String
  userName       String?
  email          String          @unique
  contact        String?
  role           String
  status         String?
  isEnrolled     Boolean         @default(false)
  enrolledAt     DateTime?
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  isRegistered   Boolean         @default(false)
  mentorProfile  MentorProfile?
  notices        Notice[]        @relation("NoticeCreator")
  payments       Payment[]
  studentProfile StudentProfile?
}

model StudentProfile {
  id                String         @id @default(uuid())
  userId            String         @unique
  examType          String
  cetPercentile     Float?
  rank              Int?
  category          String
  domicileState     String
  homeUniversity    String
  plan              String
  familyIncome      String?
  createdAt         DateTime       @default(now())
  diplomaPercentage Float?
  jeePercentile     Float?
  pcbPercentile     Float?
  name              String?
  mentorId          String?
  mentor            MentorProfile? @relation(fields: [mentorId], references: [id])
  user              User           @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model MentorProfile {
  id        String           @id @default(uuid())
  userId    String           @unique
  name      String
  contact   String           @unique
  createdAt DateTime         @default(now())
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  students  StudentProfile[]
}

model Payment {
  id            String    @id @default(uuid())
  userId        String
  amount        Float
  currency      String    @default("INR")
  paymentStatus String
  transactionId String?   @unique
  paidAt        DateTime?
  createdAt     DateTime  @default(now())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notice {
  id            String   @id @default(uuid())
  title         String
  description   String
  date          String
  createdAt     DateTime @default(now())
  seen          Boolean  @default(false)
  priority      String
  createdBy     String   @default("admin")
  user          User     @relation("NoticeCreator", fields: [createdBy], references: [id], onDelete: Cascade)
  attachmentUrl String?
}

model CollegeCutoffList {
  id          String @id
  collegeCode String
  collegeName String
  choiceCode  String
  branch      String
  rank        Int
  percentile  Float
  category    String

  @@index([collegeCode])
  @@index([collegeName])
}

model CollegeDetails {
  collegeCode    String  @unique
  collegeName    String
  status         String?
  homeUniversity String?
  district       String?
  minority       String?
  feesPdfUrl     String?
}

model TimelineEvent {
  id          String   @id @default(uuid())
  title       String
  description String?
  startDate   DateTime
  endDate     DateTime
  status      String   @default("upcoming")
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
